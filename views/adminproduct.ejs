<!DOCTYPE html>
<html>
<head>
  <title>Delete Product</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="text-center">All Products</h1>
    <%- include('./partial/adminfooter') %>
    
    <!-- Product List -->
    <section>
      <h2>Product List</h2>
      <% if (products.length === 0) { %>
        <p>No products found.</p>
      <% } else { %>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Author</th>
              <th>Location</th>
              <th>Delivery</th>
              <th>Expiredate</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product => { %>
              <tr>
                <td><%= product._id %></td>
                <td><%= product.name %></td>
                <td><%= product.author %></td>
                <td><%= product.location %></td>
                <td><%= product.delivery %></td>
                <td><%= product.expiredate %></td>
                <td>
                  <form action="/products/edit/<%= product._id %>" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <button type="submit" class="btn btn-danger">Edit</button>
                  </form>
                  <form action="/admin/delete/product/<%= product._id %>?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>

                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </section>
  </div>
  <style>
    
    /* Add some basic styling for buttons */
    .btn {
      display: inline-block;
      padding: 10px 20px;
      background-color: pink;
      border: none;
      border-radius: 4px;
      color: black;
      font-size: 16px;
      cursor: pointer;
      text-align: center;
      text-decoration: none;
    }

    /* Style for the "Edit" button */
    .btn-edit {
      background-color: pink;
    }

    /* Style for the "Delete" button */
    .btn-delete {
      background-color: #dc3545;
    }

    /* Optional: Add some margin between the buttons */
    form {
      margin-bottom: 10px;
    }
  </style>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
